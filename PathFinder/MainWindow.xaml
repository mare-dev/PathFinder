<Window x:Name="Program" x:Class="PathFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathFinder"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800" Loaded="Program_Loaded" Closing="Program_Closing" KeyUp="Program_KeyUp">
    <Canvas x:Name="mainCanvas">
        <TextBlock x:Name="txtNoSolution" Visibility="Hidden" Text="NO SOLUTION" Canvas.Top="50" Canvas.Left="50" FontSize="42" FontWeight="Bold" Background="#FFF6F0F0">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Red" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FFFF3F3F" Offset="0.687"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
    </Canvas>
</Window>
